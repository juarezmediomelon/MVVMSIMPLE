<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Name"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Username"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Email"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/user_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Address Cty"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Phone"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/user_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Website"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/user_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heroe Company Name"
            android:textAlignment="center" />
    </LinearLayout>


</androidx.cardview.widget.CardView>